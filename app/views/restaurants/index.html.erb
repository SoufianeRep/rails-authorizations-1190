<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Restaurants</h1>
    <%= link_to '+', new_restaurant_path, class: 'btn btn-light'  %>
  </div>
  <div class="cards">
    <% @restaurants.each do |restaurant| %>
      <h5>
        <%= link_to restaurant.name, restaurant_path(restaurant), class: 'text-secondary text-decoration-none' %>
      </h5>
      <p><%= restaurant.address %></p>
      <p><%= "*" * restaurant.rating %></p>
    <% end %>
  </div>
</div>
